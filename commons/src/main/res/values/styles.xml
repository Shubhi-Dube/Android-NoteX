<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LightThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Branded" parent="LightThemeBlue">
        <item name="colorPrimaryDark">#00a0e9</item>
        <item name="android:windowBackground">@drawable/branded_background</item>
    </style>

    <style name="LightThemeRed" parent="LightThemeBlue">
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/dark_theme_background</item>
        <item name="android:panelFullBackground">@color/dark_theme_background</item>
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlayDark" parent="@style/ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.PopupOverlayDark" parent="@style/ThemeOverlay.AppCompat.Dark" />

    <!--region AboutPage-->
    <style name="AboutPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AboutPage.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AboutPage.Item.Category">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="AboutPage.Item.Line">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/about_page_line</item>
    </style>

    <style name="AboutPage.Item.Card">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/about_page_card</item>
        <item name="android:elevation" tools:ignore="NewApi">1dp</item>
    </style>

    <style name="AboutPage.Header"/>

    <style name="AboutPage.Header.ToolbarTitleExpanded" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AboutPage.Header.Icon">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">92dp</item>
    </style>

    <style name="AboutPage.Header.Slogan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AboutPage.Header.Version">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AboutPage.LicenseTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/about_page_license_title</item>
    </style>

    <style name="AboutPage.LicenseHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/about_page_license_text_size</item>
        <item name="android:textColor">@color/about_page_hint</item>
    </style>

    <style name="AboutPage.ContributorAvatar">
        <item name="android:layout_width">@dimen/about_page_avatar_size</item>
        <item name="android:layout_height">@dimen/about_page_avatar_size</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="AboutPage.ContributorName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/about_page_name_color</item>
    </style>

    <style name="AboutPage.ContributorDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/about_page_desc_color</item>
    </style>

    <style name="AboutPage.CardContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorLink">@color/about_page_link_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/about_page_card_text_color</item>
    </style>

    <style name="TransParentDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PictureViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--endregion AboutPage-->

    <!--region user info-->
    <style name="ProfileCardStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ProfileListItemStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ProfileTitleStyle">
        <item name="android:textColor">@color/light_theme_text_color</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="ProfileSubTitleStyle">
        <item name="android:textSize">@dimen/sub_medium_text</item>
    </style>

    <style name="ProfilesCardItemIconStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/medium_spacing</item>
        <item name="android:layout_marginEnd">@dimen/medium_spacing</item>
    </style>
    <!--endregion-->

    <style name="OpenResolver">
        <item name="android:drawablePadding">13dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="OptionListItem">
        <item name="android:paddingStart">13dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">13dp</item>
    </style>

    <style name="MDButton">
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BottomBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/roundbtn_tran</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@drawable/donate_button</item>
    </style>

    <style name="PayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="ColorPickerAnimation">
        <item name="android:windowEnterAnimation">@anim/color_picker_show</item>
        <item name="android:windowExitAnimation">@anim/color_picker_hide</item>
    </style>

</resources>